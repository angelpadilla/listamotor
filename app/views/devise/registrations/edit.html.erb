<div class="container" style="margin-top: 3rem;">
  <div class="col-sm-12 col-md-3">
    <div class="col-sm-12 white-n-b panel-user">
      <div class="col-sm-12">
        <a href="<%= my_cars_path %>">Mis autos</a>
      </div>
      <div class="col-sm-12">
        <a href="<%= likes_path %>" >Mis favoritos</a>
      </div>
      <div class="col-sm-12">
        <a href="<%= store_path(current_user.id) %>">Mi perfil</a>
      </div>
      <div class="col-sm-12">
        <a href="<%= edit_user_registration_path %>" class="active">Editar perfil</a>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-9 white-n-b">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <%= f.input :name, required: true, autofocus: true, label: false, placeholder: 'Nombre' %>
        <%= f.input :email, required: true, label: false, placeholder: 'Email' %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Actualmente esperando confirmación para: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :current_password, hint: "necesitamos tu contraseña actual para guardar los cambios", required: true, label: false, placeholder: 'Contraseña actual' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Guardar" %>
      </div>
    <% end %>

    <h3>¿Cancelar mi cuenta?</h3>

    <p>¿No estas feliz? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete %></p>

  </div>
</div>


