<div class="container" style="margin-top: 3rem;">

	<div class="col-sm-12 col-md-3">
		<div class="col-sm-12 white-n-b panel-user">
			<div class="col-sm-12">
				<a href="<%= my_cars_path %>" class="active">Mis autos</a>
			</div>
			<div class="col-sm-12">
				<a href="<%= likes_path %>">Mis favoritos</a>
			</div>
			<div class="col-sm-12">
				<a href="<%= store_path(current_user.id) %>">Mi perfil</a>
			</div>
			<div class="col-sm-12">
				<a href="<%= edit_user_registration_path %>">Editar perfil</a>
			</div>
		</div>
	</div>

	<div class="col-sm-12 col-md-9 white-n-b">
		
		<div class="mycars">
			<% @cars.each do |car| %>
					<div class="media">
					    <% if car.galleries.blank? %>
					    	<div class="media-left">
						    	<%= image_tag 'no-car.svg', size: "100", class: "media-object" %>
								</div>
						    <div class="media-body">
									<h4 class="media-heading"><%= car.brand.title %> - <%= car.title %></h4>
									<p><%= number_to_currency car.price %></p>
								</div>
								<div class="media-right">
										<%= link_to 'ver', show_car_path(car), class: "btn btn-default btn-sm btn-block" %>
										<%= link_to 'modificar', edit_pin_path(car), class: "btn btn-default btn-sm btn-block" %>
										<%= link_to 'eliminar', car, method: :delete, data: {confirm: 'Estas seguro?'}, class: "btn btn-default btn-sm btn-block" %>

								</div>
							<% else %>
									<div class="media-left">
											<%= image_tag(car.galleries.first.photo.url(:thumb), class: "media-object") %>
									</div>
									<div class="media-body">
										<h4 class="media-heading"><%= car.brand.title %> - <%= car.title %></h4>
										<p><%= number_to_currency car.price %></p>
									</div>
									<div class="media-right">
										<%= link_to 'ver', show_car_path(car), class: "btn btn-default btn-sm btn-block" %>
										<%= link_to 'modificar', edit_pin_path(car), class: "btn btn-default btn-sm btn-block" %>
										<%= link_to 'eliminar', car, method: :delete, data: {confirm: 'Estas seguro?'}, class: "btn btn-default btn-sm btn-block" %>
									</div>
							<% end %>
					</div>
					<hr>
			<% end %>
		</div>
		<div class="row">
				<div class="col-md-12 text-center">
					<nav>
						<%= will_paginate @cars %>
					</nav>
				</div>	
		</div>
	</div>
	
</div>

