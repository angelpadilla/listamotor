<% if params[:q] and @cars.empty?%>
		<p>No hubo resultados</p>
<% end %>

	
	<div class="row">
		<% @cars.each do |car| %>
			<div class="col-sm-6 col-md-4">
				<div class="thumbnail">
					<img src="..." alt="...">
					<div class="caption">
				    <%= link_to pin_path(car) do %>
					    <h3><%= car.title %></h3>
				    <% end %>
						<p><%= car.desc.truncate(130) %></p>
						<h4><%= number_to_currency(car.price) %></h4>
					</div>
				</div>
			</div>
		<% end %>
		
	</div>

