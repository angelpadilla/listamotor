	<table class="table table-hover">
		<tr>
			<th>id</th>
			<th>fecha</th>
			<th>titulo</th>
			<th>precio</th>
			<th>estado</th>
			<th>user</th>
			<th></th>
		</tr>
		<% @cars.each do |car| %>
			<tr>
				<td><%= car.id %></td>
				<td><%= local_date car.created_at, '%b %e, %Y' %></td>
				<td><%= car.title %></td>
				<td><%= number_to_currency car.price %></td>
				<td><%= car.state.title %></td>
				<td><%= car.user.email %></td>
				<td>
					<%= link_to 'ver',  %>
					<%= link_to 'editar' %>
					<%= link_to 'destruir' %>
				</td>
			</tr>
		<% end %>
	</table>
